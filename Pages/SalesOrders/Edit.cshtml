@page
@model JINI.Pages.SalesOrders.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SalesOrder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SalesOrder.ID" />
            <div class="form-group">
                <label asp-for="SalesOrder.ID" class="control-label"></label>
                <div>@Html.DisplayFor(model => model.SalesOrder.ID)</div>
            </div>
            <div class="form-group">
                <label asp-for="SalesOrder.SalesOrderNo" class="control-label"></label>
                <input asp-for="SalesOrder.SalesOrderNo" class="form-control" />
                <span asp-validation-for="SalesOrder.SalesOrderNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalesOrder.SalesDate" class="control-label"></label>
                <input asp-for="SalesOrder.SalesDate" class="form-control" />
                <span asp-validation-for="SalesOrder.SalesDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalesOrder.Customer" class="control-label"></label>
                <select asp-for="SalesOrder.Customer" class="form-control"
                        asp-items="@Model.CustomerNameSL"></select>
                <span asp-validation-for="SalesOrder.Customer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
